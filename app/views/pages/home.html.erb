<%= render 'layouts/header' %>

    <div class="container">

      <div class="starter-template">
        <h1>Welcome To Open Cinema</h1>
        <p class="lead">We are an award-winning network of community cinemas across the UK and Ireland. </br>We've secured seed investment to build a prototype digital platform <br/> to take cinema into the 21st century!</p>
      </div>

    </div><!-- /.container -->


<div class="container">

  <div class="center">
    <div class="row">
        <div class="col-md-4">
          <div class="thumbnail">
             <!--<img src="..." alt="...">-->
             <%= image_tag('IMG_3465.JPG') %>
           <div class="caption">
        <h3>Now Showing: <b><%= @product.title %> <i class="fa fa-film"></i></b></h3>
        <h4>Venue: Electric Works - Sheffield</h4>
        <h4><b><i class="fa fa-calendar"></i> 8th April <i class="fa fa-clock-o"></i> 18.00</b> </h4>
        <p><button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Venue Manager: Colin Tan <i class="fa fa-user"></i>
</button></p>
        <P><strong>Electric Works</strong> is a state-of-the-art
 Serviced office space for a vibrant community of creative,
  digital and media businesses in Sheffield</p>
        <p>Price: FREE</p>

        
        <p><%= form_tag charges_path, id: "chargeForm" do %>
            <script src="https://checkout.stripe.com/checkout.js"></script>
                 <%= hidden_field_tag 'stripeToken' %>
                 <%= hidden_field_tag 'stripeEmail' %>
                  
                 <button id="btn-buy" type="button" class="btn btn-success btn-lg btn-block"><span class="glyphicon glyphicon-ok"></span> I want this!</button>
             <script>


             var handler = StripeCheckout.configure({
      key: '<%= Rails.configuration.stripe[:publishable_key] %>',
      token: function(token, arg) {
        document.getElementById("stripeToken").value = token.id;
        document.getElementById("stripeEmail").value = token.email;
        document.getElementById("chargeForm").submit();
      }
    });
     document.getElementById('btn-buy').addEventListener('click', function(e) {
      handler.open({
        name: 'Open Cinema',
        description: '<%= @product.title %> (Free) <%= @product.author %>',
        amount: 000
    });
    e.preventDefault();
   })
  </script>
<% end %>

    
      </div>
    </div>
  </div>
        
    </div>
  


  <div class="row">
        <div class="col-lg-12">
        <br><br>
          <p class="pull-right"><a href="http://www.opencinema.net">Open Cinema</a> &nbsp; Â©Copyright 2015<sup>TM</sup></p>
        <br><br>
        </div>
    </div>
</div>

